@model Usuario

@{
    ViewData["Title"] = "Registro";
}

<div class="container-fluid">
    <div class="row justify-content-center bg-light" style="border: solid 1px;">
        <div class="col-md-8" style="padding: 20px;">
            <h2 class="text-primary text-center mb-3">Crear usuario <b>Riwi Salud</b></h2>
            <form asp-controller="Asesores" asp-action="Registro" method="post">

                <div class="form-group mt-3">
                    <label asp-for="Nombres">Ingrese su Nombre:</label>
                    <input asp-for="Nombres" class="form-control" type="text" placeholder="Ejemplo: Carlos">
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Apellidos">Ingrese su Apellido:</label>
                    <input asp-for="Apellidos" class="form-control" type="text" placeholder="Ejemplo: Ruiz">
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Correo">Ingresar el correo: </label>
                    <input asp-for="Correo" class="form-control" type="text" placeholder="Ejemplo: carlos@gmail.com">
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="TipoDocumento">Ingrese el Tipo de documento:</label>
                    <input asp-for="TipoDocumento" class="form-control" type="email"
                        placeholder="Ejemplo: Carlos.121@gmail.com">
                    <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="NumeroDocumento">Ingrese el documento:</label>
                    <input asp-for="NumeroDocumento" class="form-control" type="password" placeholder="102342">
                    <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Celular">Ingrese su celular: </label>
                    <input asp-for="Celular" class="form-control" type="text" placeholder="Ejemplo: 3021408312">
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="A単oNacimiento">Ingrese el a単o de nacimiento: </label>
                    <input asp-for="A単oNacimiento" class="form-control" type="date">
                    <span asp-validation-for="A単oNacimiento" class="text-danger"></span>
                </div>

                

                <div class="form-group text-center mt-3">
                    <button asp-form="Usuarios" asp-action="CrearUsuario" class="btn btn-primary">Registrarse</button>
                </div>
            </form>
        </div>
    </div>
</div>
