@{
    ViewData["Title"] = "Inicio Asesores";

}

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 bg-light" style="padding: 30px;">
                <h2 class="text-primary">Riwi Salud</h2>
                <hr>
                <div class="d-flex gap-2 justify-content-center">
                    <i class="mt-1 fas fa-circle-user"></i>
                    <p> @ViewBag.CookieNombre @ViewBag.CookieApellido - Asesor</p>
                </div>
                <div class="text-center">
                    <p>Historial de atenciones</p>
                </div>
                <table class="table table-bordered border-info">
                    <thead class="table table-dark">
                        <tr>
                            <th scope="col">Cédula</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Tiempo</th>
                            <th scope="col">Detalles</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>1234567721</th>
                            <td>Pepito Perez</td>
                            <td>10:00</td>
                            <td><button class="btn btn-info"><i class="fas fa-circle-info"></i></button></td>
                        </tr>
                        <tr>
                            <th>1234567721</th>
                            <td>Pepito Perez</td>
                            <td>10:00</td>
                            <td><button class="btn btn-info"><i class="fas fa-circle-info"></i></button></td>
                        </tr>
                        <tr>
                            <th>1234567721</th>
                            <td>Pepito Perez</td>
                            <td>10:00</td>
                            <td><button class="btn btn-info"><i class="fas fa-circle-info"></i></button></td>
                        </tr>
                    </tbody>
                </table>
                <div class="text-center">
                    <div class="d-flex gap-5 text-center">
                        <a asp-controller="Asesores" asp-action="Registro" class="btn btn-success"><i class="fas fa-user-plus"></i></a>
                        <button class="btn btn-success">Siguiente Turno</button>
                    </div>
                    <div class="text-end mt-4">
    <!-- El ID es importante para poder referenciar este elemento en JavaScript -->
    <p id="current-time"></p>
</div>

                </div>
            </div>
            <div class="col-md-6 bg-light" style="padding: 30px;">
                <nav class="navbar navbar-expand-lg bg-body bg-dark">
                    <div class="container">
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav gap-3">
                                <li class="nav-item">
                                    <a class="nav-link text-light" aria-current="page" href="#">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" href="#">Historial</a>
                                </li>
                                <li class="nav-item me-5">
                                    <a class="nav-link text-light" href="#">Consultar</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="Asesores" asp-action="Salir">Cerrar
                                        Sesión</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <!-- Tu vista de búsqueda de usuario -->
                <div class="container mt-5">
                    <h2 class="text-center">Ingresar la información del usuario</h2>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="BuscarUsuario" asp-controller="Asesores" method="post">
                        <div class="form-group mt-4">
                            <label for="tipoDocumento">Seleccione el tipo de documento</label>
                            <select class="form-control" name="tipoDocumento">
                                <option disabled selected>Tipo de Documento</option>
                                <option value="CC">CC - Cédula de Ciudadanía</option>
                                <option value="TI">TI - Tarjeta de Identidad</option>
                                <option value="RC">RC - Registro Civil de Nacimiento</option>
                                <option value="PS">PS - Pasaporte</option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <label for="numeroDocumento">Ingrese su número de documento</label>
                            <input class="form-control" type="text" name="numeroDocumento"
                                placeholder="Ejemplo: 100393213">
                        </div>
                        <div class="form-group d-flex justify-content-center mt-3">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </div>
                    </form>
                </div>
    




            </div>

<!-- Vista Inicio -->
<div class="col-md-4 bg-light" style="padding: 30px; border: solid 1px;">
    <h3 class="text-center">Turnos prioritarios</h3>
    <table class="table table-bordered border-dark text-center">
        <thead class="table table-dark">
            <tr>
                <th>Turno</th>
                <th>Fecha y Hora</th>
                <th>Módulo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in ViewBag.UltimosTurnos)
            {
                <tr>
                    <td>@turno.N_Turno</td>
                    <td>@turno.FechaTurno.ToString("dd/MM/yyyy HH:mm:ss")</td> <!-- Formato para fecha y hora -->
                    <td>@turno.Modulo</td>
                </tr>
            }
        </tbody>
    </table>
</div>



        </div>
    </div>
</body>
